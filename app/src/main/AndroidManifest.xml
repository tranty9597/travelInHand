<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alltravel.tytv.travelinhand">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DasboardActivity"
            android:label="@string/title_activity_dasboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OnTravelActitvity"
            android:label="@string/title_activity_on_travel_actitvity" />
        <activity android:name=".StepDetailActivity" />
        android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CreateTravelActivity" />
        <activity android:name=".CreateTravelLocation" />
        <activity android:name=".DetailTransportation" />
        <activity android:name=".DetailHotel" />
        <activity android:name=".ListAllStepForTravel"></activity>
    </application>

</manifest>